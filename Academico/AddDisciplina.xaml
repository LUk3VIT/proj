<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Academico.AddDisciplina"
             Title="AddDisciplina"
             Background="Black">
    <VerticalStackLayout
        Padding="10"
        Spacing="25">

        <FlexLayout>
            <ImageButton
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="50"
                Background="White"
                Padding="10"
                Clicked="btnDisciplinaOnClick"
                Source="x.png"/>
        </FlexLayout>

        <Label 
            x:Name="lblNome"
            Text="Nome"
            TextColor="White"
            FontSize="25"/>
        
        <Border>
            <Entry
                x:Name="etrNome"/>
        </Border>

        <Label 
            x:Name="lblSigla"
            Text="Sigla"
            TextColor="White"
            FontSize="25"/>
        <Border>
            <Entry
                x:Name="etrSigla"/>
        </Border>

        <Label 
            x:Name="lblObs"
            Text="Observação"
            TextColor="White"
            FontSize="25"/>
        <Border>
            <Entry
                x:Name="etrObs"/>
        </Border>

        <Button
            Text="Salvar"
            Background="Blue"/>

    </VerticalStackLayout>
</ContentPage>