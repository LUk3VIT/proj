<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Academico.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Academico"
    
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    
    Title="Academico">

    <FlyoutItem
        Title="Menu"
        FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent
            Title="Curso"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="curso.png"/>

        <ShellContent
            Title="Disciplina"
            ContentTemplate="{DataTemplate local:Disciplina}"
            Route="Disciplina"
            Icon="disciplina.png"/>

        <ShellContent
            Title="Periodos"
            ContentTemplate="{DataTemplate local:Periodos}"
            Route="Periods"
            Icon="periodo.png"/>

    </FlyoutItem>

</Shell>
