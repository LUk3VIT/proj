<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Academico.AddPeriodos"
             Title="Periodos > Add"
             Background="Black"
             >
    <VerticalStackLayout
        Padding="10"
        Spacing="25">
        
        <FlexLayout>
            <ImageButton
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="50"
                Background="White"
                Padding="10"
                Clicked="btnPeriodosOnClick"
                Source="x.png"/>
        </FlexLayout>
        
        <Label 
            x:Name="lblNome"
            Text="Nome"
            TextColor="White"
            FontSize="25"/>
        <Border>
            <Entry
                x:Name="etrNome"
                TextColor="White"/>
        </Border>
        
        <Label 
            x:Name="lblSigla"
            Text="Sigla"
            TextColor="White"
            FontSize="25"/>
        <Border>
            <Entry
                x:Name="etrSigla"
                TextColor="White"/>
        </Border>
        <Button
            x:Name="btnInserir"
            Text="Salvar"
            Background="Blue"
            Clicked="btnInserir_Clicked"/>

    </VerticalStackLayout>
</ContentPage>