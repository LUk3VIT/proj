<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Academico.upPeriodos"
             Title="Periodos > Up"
             Background="Black">
    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="25">

            <FlexLayout>
                <ImageButton
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="50"
                    Background="White"
                    Clicked="btnPeriodosOnClick"
                    Padding="10"
                    Source="x.png"/>
            </FlexLayout>

            <Label 
                x:Name="lblNome"
                Text="Nome"
                TextColor="White"
                FontSize="25"/>
            <Border>
                <Entry
                    x:Name="etrNome"
                    TextColor="White"/>
            </Border>

            <Label 
                x:Name="lblSigla"
                Text="Sigla"
                TextColor="White"
                FontSize="25"/>
            <Border>
                <Entry
                    x:Name="etrSigla"
                    TextColor="White"/>
            </Border>

            <Button
                Text="Editar"
                Background="Blue"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>